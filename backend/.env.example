# Application Settings
APP_NAME="AI Learning Coach"
APP_VERSION="1.0.0"
DEBUG=True
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=sqlite:///./data/learningcoach.db
# For PostgreSQL: postgresql://user:password@localhost:5432/learningcoach

# LLM Configuration
LLM_PROVIDER=ollama  # Options: ollama, openai
LLM_MODEL=llama3.2   # For ollama: llama3.2, mistral, etc. For openai: gpt-4, gpt-3.5-turbo
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
OLLAMA_BASE_URL=http://localhost:11434

# OpenAI (if using)
OPENAI_API_KEY=your-openai-api-key-here

# Embeddings
EMBEDDING_MODEL=all-MiniLM-L6-v2  # sentence-transformers model
# Alternative: BAAI/bge-small-en-v1.5

# ChromaDB Vector Store
CHROMA_PERSIST_DIR=./data/chroma
CHROMA_COLLECTION_NAME=learning_knowledge

# RAG Configuration
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7
CONFIDENCE_THRESHOLD=70

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_EXTENSIONS=.pdf,.txt,.md,.docx,.pptx,.xlsx
UPLOAD_DIR=./data/uploads

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # Options: json, text

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOW_CREDENTIALS=True

# Admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme123

# Features
ENABLE_QUIZ=True
ENABLE_ROADMAP=True
ENABLE_FILE_UPLOAD=True
ENABLE_NOTIFICATIONS=False

# Learning Defaults
DEFAULT_LEARNING_DURATION_DAYS=30
DEFAULT_SKILL_LEVEL=beginner  # beginner, intermediate, advanced
